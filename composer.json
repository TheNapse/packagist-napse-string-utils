{
  "name": "napse/string-utils",
  "description": "Lightweight string casing conversions and semantic versioning for PHP",
  "type": "library",
  "license": "MIT",
  "keywords": ["string", "utils", "case-conversion", "semver", "version"],
  "autoload": {
    "psr-4": {
      "Napse\\StringUtils\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Napse\\StringUtils\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Steffen Schmitt",
      "email": "steffen@napse.io"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "phpstan/phpstan": "^2.1"
  }
}
